<?xml version="1.0" encoding="utf-8"?>
<com.android.systemui.statusbar.auto.compositecard.RoadInfoLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/road_info_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/info_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="47dp"
            android:id="@+id/speed_layout"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/speed_info"
                android:textSize="100sp"
                android:textColor="@color/card_primary_color"
                android:text="@string/speed"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/speed_unit"
                android:text="@string/speed_unit"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:textColor="@color/card_primary_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
	            android:id="@+id/camera_remain_distance"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="50dp"
	            android:textColor="@color/card_primary_color"
	            android:layout_gravity="center_horizontal"
	            android:textSize="56sp" />
            
<!--                 android:alpha="0.6f" -->
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:id="@+id/speed_layout_mini"
            android:visibility="invisible"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/speed_info_mini"
                android:textSize="48sp"
                android:text="@string/speed"
                android:textColor="@color/card_primary_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/speed_unit_mini"
                android:text="@string/speed_unit"
                android:textColor="@color/card_primary_color"
                android:layout_gravity="center_horizontal"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
<!--                 android:alpha="0.6f" -->
        </LinearLayout>
    </FrameLayout>
    <ImageView
        android:id="@+id/icon_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:src="@drawable/home_drive_car" />

</com.android.systemui.statusbar.auto.compositecard.RoadInfoLayout>
